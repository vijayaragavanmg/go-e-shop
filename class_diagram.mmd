    class REFRESH_TOKENS {
        +int id
        +int user_id
        +string token
        +datetime expires_at
        +datetime created_at
        +datetime deleted_at
    }

    class CATEGORIES {
        +int id
        +string name
        +string description
        +bool is_active
        +datetime created_at
        +datetime updated_at
        +datetime deleted_at
    }

    class PRODUCTS {
        +int id
        +int category_id
        +string name
        +string description
        +float price
        +int stock
        +string sku
        +bool is_active
